{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@/*":["./src/*"]
    }
  },
  "include": ["src/*", "src/**/*.vue", "./src/**/*.tsx", "./src/**/*.jsx", "src/**/*.ts", "src/**/*.js","./*.tsx"],
  // "references": [{ "path": "./tsconfig.node.json" }] // 为了兼容 es6 代码里面能写 nodejs 的 require() 代码
}
